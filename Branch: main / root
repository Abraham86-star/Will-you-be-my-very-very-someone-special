  <script>
    const yes = document.getElementById('yes');
    const no = document.getElementById('no');
    const msg = document.getElementById('message');
    const image = document.getElementById('mainImage');
    let noClickCount = 0;

    yes.onclick = function () {
      msg.innerText = "Love you more than I can say and you can know üòö‚ù§Ô∏è‚ù§Ô∏è";
      image.src = "https://media.giphy.com/media/YSfrvcbz6e3n0Gvac3/giphy.gif";
      for (let i = 0; i < 40; i++) {
        createHeart();
      }
    };

    no.onclick = function () {
      noClickCount++;
      image.src = "https://media.giphy.com/media/U2Ir6ft06qkEvEgepW/giphy.gif";
      if (noClickCount === 1) {
        no.innerText = "Really my Princess üòø";
      } else if (noClickCount === 2) {
        no.innerText = "Are you sure boo boo? üôÑ";
      } else if (noClickCount === 3) {
        no.innerText = "Please don‚Äôt break my heart üò≠";
      } else {
        no.innerText = "I can‚Äôt lose you Honey ‚òπÔ∏è";
        msg.innerText = "Still waiting here‚Ä¶";
      }
    };

    function createHeart() {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.style.left = Math.random() * window.innerWidth + "px";
      heart.style.top = window.innerHeight + "px";
      heart.style.background = getRandomHeartColor();
      document.body.appendChild(heart);

      setTimeout(() => {
        heart.remove();
      }, 5000);
    }

    function getRandomHeartColor() {
      const colors = ["#ff6b81", "#ff8787", "#f783ac", "#d6336c"];
      return colors[Math.floor(Math.random() * colors.length)];
    }
  </script>

